@model BankApplication.Models.Login.LoginViewModel

@{
    Layout = "_Login";
}
<h4>Hello! let's get started</h4>
<h6 class="fw-light">Sign in to continue.</h6>
<form class="pt-3" asp-action="Login">
    <div class="form-group">
        <input asp-for="username" type="text" class="form-control form-control-lg" id="exampleInputEmail1"
               placeholder="Username">
    </div>
    <div class="form-group">
        <input asp-for="password" type="password" class="form-control form-control-lg" id="exampleInputPassword1"
               placeholder="Password">
    </div>
    <div class="mt-3">
        <input type="submit" value="SIGN IN" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" />
    </div>      
</form>


